                <artifactId>sparksys-commons</artifactId>
                <version>${sparksys.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- sparksys-commons 组件-->
            <dependency>
                <groupId>com.sparksys</groupId>
                <artifactId>sparksys-distributed-cloud-starter</artifactId>
